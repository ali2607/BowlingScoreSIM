@model Game
@using System.Text.Json
@{
    ViewData["Title"] = "Game Page";
}
<div class="container fluid py-4">
    @for (int i = 0; i < Model.Players.Count; i++)
    {
        <div class="row mb-4">       
            <!-- Name column -->
            <div class="col border-custom">
                <span>@Model.Players[i]</span>
            </div>
            <!-- Scores columns -->
            @for (int j = 0; j < Model.NumberOfRounds; i++)
            {
                <div class="col border-custom ">
                    <span> <label>t1:</label> @Model.Rounds[j].FirstScore</span>
                    <span><label>t2:</label> @Model.Rounds[j].SecondScore</span>
                    <span><label>res:</label> @Model.Rounds[j].Res</span>
                </div>                 
            }
        </div>       
    }
    <!-- Choose the number of pins  -->
    <h4 class="mb-3 text-center" style="color:#fc5d5d">@Model.Players[i]'s turn!!</h4>
    <div class="col-sm-14 col-md-10 col-lg-8 mb-3 d-flex align-items-start mx-auto">
            <div class="card player-card-pins">
                <div class="card-body align-items-center text-center">
                    <h4 class="mb-3">How many pins fell?</h4>
                    @for (int i = 1; i <= Model.NumberOfPins; i++) // MODIFIER LE 10 PAR LE NOMBRE DE QUILLES
                    {
                        <button id="button@i" class="bouton btn btn-secondary" onclick="ColorButtons(this)">@i</button>
                    }
                    <div id="pinsScore" class="mt-3" style="color:#fc5d5d">0</div>
                </div>
            </div>
    </div>

    <!-- Confirm Button  -->
    <div class="row" style="font-size:xx-large">
        <div class="col text-center">
            <button type="submit" class="btn btn-purple btn-lg"><strong>Confirm</strong></button>
        </div>
    </div>

</div>

 @section Scripts {

    <!-- script to change buttons color -->
    <script>
        function ColorButtons(clickedButton) {
            for (int i = 1; i <= 10; i++) // MODIFIER LE 10 PAR LE NOMBRE DE QUILLES
            {
                var pinsScore = document.getElementById('pinsScore');
                pinsScore.value = 1;
            }
        });
    </script>

}