@model Game
@using System.Text.Json
@{
    ViewData["Title"] = "Game Page";
}
<div class="container fluid py-4">
    <div class="row mb-5">       
        <!-- Name col border-customumn -->
        <div class="col border-custom border-custom d-flex align-items-center">
            <span class="d-block mx-auto text-center">Denis</span>
        </div>
        <!-- Scores col border-customumns -->
        @for (int i = 1; i < 10; i++) // MODIFIER LE 10 PAR LE NOMBRE DE ROUNDS
        {
            <div class="col border-custom border-custom">
                <div class="d-flex justify-content-between">
                    <label class="d-inline ms-2">10</label>
                    <label class="d-inline me-2">10</label>
                </div>
                <label class="d-block mx-auto text-center">20</label>
            </div>
        }
    </div>

    <!-- Choose the number of pins  -->
        <input type="hidden" name="game" value="@JsonSerializer.Serialize(Model)" />

        <h4 class="mb-3 text-center" style="color:#fc5d5d">Ali's turn!!</h4>
        <div class="col-12 mb-3 d-flex justify-content-center">
                <div class="card player-card-pins">
                    <div class="card-body align-items-center text-center">
                        <h4 class="mb-3">How many pins fell?</h4>
                        @for (int i = 1; i <= 10; i++) // MODIFIER LE 10 PAR LE NOMBRE DE QUILLES
                        {
                        <button id="button@(i)" class="bouton btn btn-secondary" onclick="ColorButtons(this,@i)">@i</button>
                        }
                        <h4 id="pinsScore" class="mt-3" style="color:#fc5d5d">0</h4>
                    </div>
                </div>
        </div>

        <!-- Confirm Button  -->
        <div class="row" style="font-size:xx-large">
            <div class="col text-center">
                <button type="submit" class="btn btn-purple btn-lg"><strong>Confirm</strong></button>
            </div>
        </div>

